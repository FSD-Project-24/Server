    <!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Form</title>
    <link rel="stylesheet" href="/css/register.css">
    <link rel="accesible icon" href="./assets/icons/the-trees-svgrepo-com.svg" type="image/svg+xml">
    <script src="https://kit.fontawesome.com/97ebdf5864.js" crossorigin="anonymous"></script>
</head>
<body>
     
    <div class="container">
        <h2>Register</h2>

        <form method="post" action="../api/auth/signup" id="loginForm">
            <div class="form-group">
                <input type="username" id="username" name="username" required>
                <label for="" id="username">Username</label>
                <i class="fa-solid fa-user"></i>
            </div>
            <div class="form-group">
                <input type="email" id="email" name="email" required>
                <label for="" id="email">Email</label>
                <i class="fa-solid fa-envelope"></i>
            </div>

            <div class="form-group">
                <input type="password" id="password" name="password" required>
                <label for="" id="password">Password</label>
                <i class="fa-solid fa-lock"></i>
            </div>
            <!-- changes -->
            <div class="form-group">
                <input type="role" id="role" name="role" required>
                <label for="" id="role">Role</label>
                <i class="fa-solid fa-comment"></i>
            </div>

           

            <p>
                <input type="checkbox">Remember Me 
                <!-- <a href="#">Forget Password</a> -->
            </p>

            <input id="btn" type="submit" value="Register">

            <p>Already Have an account? <a href="/login">Login</a></p>

        </form>
    </div>
    <script>
        const singupButton = document.querySelector('#btn');
        const formData = document.querySelector('#loginForm');
        singupButton.addEventListener('click',async (e)=>{
            e.preventDefault();
            // not posting the form directly 
            const myForm = new FormData(formData);
            const formBody = {
                "email": myForm.get("email"),
                "password": myForm.get("password")
            }
            try{
                const response = await fetch("../api/auth/signup",{
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(formBody)
                });
                if(response.ok){
                    window.location.href = '/';
                }else{
                    const error = await response.json();
                    console.error(error.message);
                    alert(error.message);
                }
            }catch(err){
                console.error(err);
            }   
        });
    </script>
</body>
</html>